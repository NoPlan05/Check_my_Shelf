<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"   >

    <solid
        android:color="@color/gray" >
    </solid>
    <!-- for the outline width-->
    <stroke
        android:width="0dp"
        android:color="#C4CDE0" >
    </stroke>

    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"    >
    </padding>
    <!-- for corner size-->
    <corners
        android:radius="20dp"   >
    </corners>

</shape>